{
  "name": "email-notification-service",
  "version": "1.1.0",
  "description": "Email Notification Service for Campus Device Loan System",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart": "npm run build",
    "start": "func start --port 7073",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@azure/monitor-opentelemetry": "^1.14.2",
    "@opentelemetry/api": "^1.9.0",
    "@sendgrid/mail": "^8.1.6",
    "applicationinsights": "^3.12.1"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "azure-functions-core-tools": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  }
}
